<h2>Create an Account</h2>
<div class="edit_user" style="padding:50px;">
<%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f| %>
<div class="form-inputs">
  <%= devise_error_messages! %>
  
  <%= f.hidden_field :invitation_token %>
  <%= f.input :first_name,required: true, input_html: {class: "form-control"} %>
  <%= f.input :last_name,required: true, input_html: {class: "form-control"} %>
  <%= f.input :emergency_contact, required: true ,placeholder: "(xxx)-xxx-xxxx", input_html: {class: "form-control"} %>
  <% if resource.email.include? "@gmail.com" %>
      <%= f.check_box :google_account %> Sign in with Google <br>
  <% end %>
  <%= f.input :password,required: true, input_html: {class: "form-control"} %>
  <%= f.input :password_confirmation ,required: true,input_html: {class: "form-control"}%>
  <%= f.hidden_field :email %>

</div>
<br>
<div class="form-actions">
  <%= f.button :submit, "Create Account" %>
</div>
<% end %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    var $mobileNumber = $('#user_emergency_contact');

    if ($mobileNumber.length != 10) {
      $mobileNumber.mask("(000)-000-0000");
    }
  });
</script>